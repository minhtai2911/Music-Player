<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mContainer"
    android:background="@drawable/bgr_primary"
    android:orientation="vertical"
    tools:context=".activity.PlayingActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout_dominant">

        <LinearLayout
            android:id="@+id/toolbar_playing"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="46dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back_btn" />
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:shadowColor="#695B5B"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:maxLines="1"
                android:maxWidth="180dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="PLAYING NOW"/>
            </RelativeLayout>
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cover_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/default_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:civ_border_overlay="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFFFF"
            android:layout_below="@+id/toolbar_playing"
            />
        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar_playing"
            android:background="@drawable/c_circle">
    </ImageView>

<!--        <ImageView-->
<!--        android:id="@+id/cover_img"-->
<!--        android:layout_width="340dp"-->
<!--        android:layout_height="340dp"-->
<!--        android:layout_below="@+id/toolbar_playing"-->
<!--            android:src="@drawable/default_image"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="50dp" />-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_in4music"
            android:layout_width="match_parent"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textFontWeight="700"
                android:fontFamily="@font/poppin_semibold"                android:maxWidth="250dp"
                android:maxLines="1"
                android:shadowColor="#695B5B"
                android:layout_centerHorizontal="true"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="Song name"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/song_name"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:fontFamily="@font/arimo_bold"
                android:maxWidth="250dp"
                android:maxLines="1"
                android:shadowColor="#695B5B"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="Artist"
                android:textColor="#E4E4E4"
                android:textSize="20sp" />


        </RelativeLayout>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_in4music"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:progressBackgroundTint="#FFFFFF"
            android:progressTint="#FFFFFF"
            android:thumb="@drawable/thumb" />

        <RelativeLayout
            android:id="@+id/rltime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/duration_played"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arimo_bold"
                android:text="00:00"
                android:shadowColor="#695B5B"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:textColor="#E4E4E4"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/duration_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/arimo_bold"
                android:text="00:00"
                android:shadowColor="#695B5B"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:textColor="#E8E8E8"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rltime"
            android:id="@+id/play_bar"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shuffleBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:layout_toStartOf="@+id/prevBtn"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/iconshuffle" />

            <ImageView
                android:id="@+id/prevBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/playPauseBtn"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/iconprevious" />

            <ImageView
                android:id="@+id/playPauseBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/nutplay" />

            <ImageView
                android:id="@+id/nextBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/playPauseBtn"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/iconnext" />

            <ImageView
                android:id="@+id/repeatBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"
                android:layout_toEndOf="@+id/nextBtn"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/iconrepeat" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_bar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="52dp"
                android:alpha="0.5"
                android:background="@drawable/playing_bottom">
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:paddingBottom="30dp">
                <ImageView
                    android:id="@+id/layout_queue"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/queue2"
                    />
                <ImageView
                    android:id="@+id/img_add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="150dp"
                    android:background="@drawable/plus"
                    android:scaleType="fitXY"
                    tools:srcCompat="@drawable/plus"
                    android:layout_toEndOf="@+id/layout_queue"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
