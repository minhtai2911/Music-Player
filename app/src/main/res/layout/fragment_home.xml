<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:scrollbars="none"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/random_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/random_bg_green"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:shadowColor="#695B5B"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:maxLines="1"
                        android:textFontWeight="700"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="60dp"
                        android:fontFamily="@font/poppin_semibold"
                        android:textSize="24sp"
                        android:text="Play And Enjoy"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/song_img"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:src="@drawable/default_playlist_image"
                                app:civ_border_overlay="true"
                                android:layout_marginLeft="-97dp"
                                app:civ_border_width="2dp"
                                android:layout_centerVertical="true"
                                app:civ_border_color="#FFFFFFFF"
                                android:layout_toEndOf="@+id/random_img"
                                />
                            <ImageView
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:src="@drawable/c_layer_half"
                                android:layout_toEndOf="@+id/random_img"
                                android:layout_marginLeft="-97dp"
                                android:layout_centerVertical="true">
                            </ImageView>
                            <ImageView
                                android:id="@+id/random_img"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                android:elevation="15dp"
                                android:layout_margin="15dp"
                                android:background="@drawable/bg_shadow"
                                android:src="@drawable/img_random_5" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/song_name_random"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:shadowColor="#695B5B"
                        android:shadowRadius="2"
                        android:maxLines="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:textAlignment="textEnd"
                        android:textFontWeight="700"
                        android:fontFamily="@font/poppin_semibold"
                        android:textSize="23sp"
                        android:text="Song Name"/>
                    <TextView
                        android:id="@+id/song_artist_random"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:layout_marginRight="40dp"
                        android:textAlignment="textEnd"
                        android:shadowColor="#695B5B"
                        android:shadowRadius="2"
                        android:layout_marginBottom="25dp"
                        android:maxLines="1"
                        android:fontFamily="@font/poppin_semibold"
                        android:textSize="18sp"
                        android:text="Artist"/>
            </LinearLayout>
        </RelativeLayout>
        <fragment
            android:name="com.example.musicplayer.fragment.SongFragment"
            android:id="@+id/fragmentMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </fragment>
    </LinearLayout>
</ScrollView>
